<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoginPage.Views.UserAdminPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:LoginPage.ViewModels"
    xmlns:vm="clr-namespace:LoginPage.ViewModels"
    Title="UserAdminPageView"
    x:DataType="vm:UserAdminPageViewModel">
    <ScrollView Margin="10">
        <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
            <CollectionView
                x:Name="colview"
                ItemsSource="{Binding Players}"
                SelectedItem="{Binding SelectedPlayer}"
                SelectionMode="Single">
                <CollectionView.ItemsTemplate x:DataType="models:Player">
                    <Grid ColumnDefinitions="" />
                </CollectionView.ItemsTemplate>
                <CollectionView.EmptyView>
                    <StackLayout
                        Margin="10"
                        Background="LightBlue"
                        HeightRequest="180"
                        VerticalOptions="Start">
                        <Image
                            HeightRequest="180"
                            Source="no_players.jpg"
                            WidthRequest="180" />

                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </ScrollView>
</ContentPage>