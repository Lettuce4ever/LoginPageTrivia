<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LoginPage.Views.UserAdminPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:LoginPage.Models"
    xmlns:vm="clr-namespace:LoginPage.ViewModels"
    Title="UserAdminPageView"
    x:DataType="vm:UserAdminPageViewModel">
    <ScrollView Margin="10">
        <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
            <CollectionView
                x:Name="colview"
                ItemsSource="{Binding Players}"
                SelectedItem="{Binding SelectedPlayer}"
                SelectionMode="Single">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Player">

                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItem
                                    Command="{Binding Source={x:Reference colview}, Path=BindingContext.DeleteCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="Delete" />
                            </SwipeView.LeftItems>
                            <Grid
                                Padding="10"
                                ColumnDefinitions="auto, auto"
                                ColumnSpacing="5"
                                HorizontalOptions="Center"
                                RowDefinitions="*, *, *"
                                RowSpacing="5">


                                <Border
                                    Grid.RowSpan="3"
                                    Grid.Column="0"
                                    HeightRequest="80"
                                    StrokeShape="RoundRectangle 40"
                                    StrokeThickness="5"
                                    WidthRequest="80">
                                    <Label
                                        FontSize="32"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}" />
                                </Border>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontSize="14"
                                    HorizontalOptions="Center"
                                    Text="{Binding Mail}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    Text="{Binding Rank}" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    Text="{Binding Score}" />


                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout
                        Margin="10"
                        Background="LightBlue"
                        HeightRequest="180"
                        VerticalOptions="Start">
                        <Image
                            HeightRequest="180"
                            Source="no_players.jpg"
                            WidthRequest="180" />

                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </ScrollView>
</ContentPage>